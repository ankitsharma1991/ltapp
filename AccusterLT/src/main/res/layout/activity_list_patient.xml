<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list__patient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg1080"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/hintscolor"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">


        <custom.AvenirRomanTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".16"
            android:imeOptions="flagNoExtractUi"
            android:text="Serial No"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/textsize" />


        <custom.AvenirRomanTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".24"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"
            android:text="CampName"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/textsize" />


        <custom.AvenirRomanTextView
            android:id="@+id/total_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"
            android:text="Start Date"
            android:textColor="@color/textcolor1"
            android:textSize="14sp" />

        <custom.AvenirRomanTextView
            android:id="@+id/total_patient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"
            android:text="End Date"
            android:textColor="@color/textcolor1"
            android:textSize="14sp" />


        <custom.AvenirRomanTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".16"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"
            android:text="Preview"
            android:textColor="@color/textcolor1"
            android:textSize="14sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:padding="10dp"></android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/pb"
android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"

        />

</LinearLayout>
