<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homebg1080"
    tools:context=".fragment.PackageListFragment">

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_height="400dp"
        android:layout_width="match_parent"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:divider="@color/textcolor"
        android:dividerHeight="0.5dp" />

    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <custom.AvenirRomanTextView
            android:id="@+id/txt_total_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:textStyle="bold"
            android:textSize="10dip"
            android:text="Total: -"/>
        <custom.AvenirRomanTextView
            android:id="@+id/txt_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10dip"
            android:layout_weight="1.7"
            android:text=""/>
    </LinearLayout>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@drawable/camp_description"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_delete" />



</LinearLayout>
